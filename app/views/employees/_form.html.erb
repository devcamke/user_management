<!-- app/views/employees/index.html.erb -->

<h1 class="text-center">Employee List</h1>
<div class="container mt-4 bg-light p-4 rounded shadow-sm">
  <%= search_form_for @q do |f| %>
    <div class="mb-3">
      <%= f.label :first_name_cont, 'First Name contains:', class: 'form-label' %>
      <%= f.text_field :first_name_cont, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name_cont, 'Last Name contains:', class: 'form-label' %>
      <%= f.text_field :last_name_cont, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :email_cont, 'Email contains:', class: 'form-label' %>
      <%= f.text_field :email_cont, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :contact_number_cont, 'Contact Number contains:', class: 'form-label' %>
      <%= f.text_field :contact_number_cont, class: 'form-control', type: 'tel' %>
    </div>

    <div class="mb-3">
      <%= f.label :address_cont, 'Address contains:', class: 'form-label' %>
      <%= f.text_field :address_cont, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :pincode_cont, 'Pincode contains:', class: 'form-label' %>
      <%= f.text_field :pincode_cont, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :city_cont, 'City contains:', class: 'form-label' %>
      <%= f.text_field :city_cont, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :state_cont, 'State contains:', class: 'form-label' %>
      <%= f.text_field :state_cont, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :date_of_birth_gteq, 'Date of Birth greater than or equal to:', class: 'form-label' %>
      <%= f.date_field :date_of_birth_gteq, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :date_of_hiring_gteq, 'Date of Hiring greater than or equal to:', class: 'form-label' %>
      <%= f.date_field :date_of_hiring_gteq, class: 'form-control' %>
    </div>

    <%= f.submit 'Search', class: 'btn btn-primary' %>
  <% end %>

  <!-- Display search results and other content as before -->
</div>
