<!-- app/views/employees/show.html.erb -->
<h1 class="text-center mt-4 text-capitalize">Employee Details</h1>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= "#{@employee.first_name} #{@employee.last_name}" %></h5>
          <p class="card-text"><strong>Email:</strong> <%= @employee.email %></p>
          <p class="card-text"><strong>Contact Number:</strong> <%= @employee.contact_number %></p>
          <p class="card-text"><strong>Address:</strong> <%= @employee.address %></p>
          <p class="card-text"><strong>Pincode:</strong> <%= @employee.pincode %></p>
          <p class="card-text"><strong>City:</strong> <%= @employee.city %></p>
          <p class="card-text"><strong>State:</strong> <%= @employee.state %></p>
          <p class="card-text"><strong>Date of Birth:</strong> <%= @employee.date_of_birth %></p>
          <p class="card-text"><strong>Date of Hiring:</strong> <%= @employee.date_of_hiring %></p>
          <%= link_to "Edit", edit_employee_path(@employee), class: "btn btn-primary" %>
          <%= link_to "Back", employees_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
